<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.gps.GpsMainActivity"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGetDogWalkerLocationPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치정보 얻기" />

            <Button
                android:id="@+id/btnPhotoAndMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 찍기 및 마커생성" />

            <Button
                android:id="@+id/btnWalkDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="산책거리 확인" />

            <Button
                android:id="@+id/btnWalkEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="산책 종료" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/contentView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearLayoutDogwalkerTmap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCallToUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="통화하기" />

        <Button
            android:id="@+id/btnChatToUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="채팅하기" />
    </LinearLayout>

</android.widget.LinearLayout>