<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dog_walker"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@drawable/layout_border">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/dog_walker_name"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:padding="6dp"
            android:textStyle="bold"
            android:text="이름"
            android:textSize="12sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/big_city"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:padding="6dp"
            android:text="큰 도시"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/dog_walker_name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/small_city"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:padding="6dp"
            android:text="작은 도시"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/big_city"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/dogwalker_gender"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:padding="6dp"
            android:text="성별"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/small_city"
            tools:ignore="MissingConstraints" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>