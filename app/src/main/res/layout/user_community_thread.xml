<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_thread"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/layout_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="IDlist"
        android:textSize="12sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_height="40dp"
        android:layout_width="150dp"
        android:id="@+id/user_thread_title"
        android:text="제목list"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/user_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_height="40dp"
        android:layout_width="100dp"
        android:id="@+id/user_location"
        android:text="위치list"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/user_thread_title"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_height="40dp"
        android:layout_width="75dp"
        android:id="@+id/user_thread_date"
        android:text="날짜list"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/user_location"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>