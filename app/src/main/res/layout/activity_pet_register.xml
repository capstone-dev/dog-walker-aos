<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.login.PetRegisterActivity">




    <android.support.constraint.ConstraintLayout
        android:id="@+id/Pet_Register_Funtion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEABD3E"
            android:textSize="40dp"
            android:textStyle="bold"
            android:text="MyPet 등록"
            android:gravity="center"/>
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="10dp"
        android:id="@+id/Pet_Register_Funtio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/Pet_Register_Funtion"
        app:layout_constraintTop_toBottomOf="@+id/Pet_Register_Funtion">

        <ImageView
            android:id="@+id/PetImage"
            android:src="@drawable/puppy"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toRightOf="@id/petImageText"
            tools:ignore="MissingConstraints,OnClick" />


        <TextView
            android:id="@+id/petImageText"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="사진등록 : "
            android:textColor="#000000"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

    </android.support.constraint.ConstraintLayout>



    <android.support.constraint.ConstraintLayout
        android:id="@+id/Pet_Register_Funti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/Pet_Register_Funtio"
        app:layout_constraintTop_toBottomOf="@+id/Pet_Register_Funtio">


        <TextView
            android:id="@+id/idText"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/id"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />


        <TextView
            android:id="@+id/id"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="아이디 : "
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/Pet_Register_Funti"
            app:layout_constraintLeft_toRightOf="@+id/idText"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Pet_Register_Funt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/Pet_Register_Funti"
        app:layout_constraintTop_toBottomOf="@+id/Pet_Register_Funti">


        <EditText
            android:id="@+id/dognameText"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@+id/dogname"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/dogname"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="강아지 이름 : "
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/Pet_Register_Funt"
            app:layout_constraintLeft_toRightOf="@+id/dognameText"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />


    </android.support.constraint.ConstraintLayout>



    <android.support.constraint.ConstraintLayout
        android:id="@+id/Pet_Register_Fun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/Pet_Register_Funt"
        app:layout_constraintTop_toBottomOf="@+id/Pet_Register_Funt">


        <EditText
            android:id="@+id/typeText"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@+id/type"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text=" 강아지 종 : "
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/Pet_Register_Fun"
            app:layout_constraintLeft_toRightOf="@+id/typeText"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />


    </android.support.constraint.ConstraintLayout>



    <android.support.constraint.ConstraintLayout
        android:id="@+id/Pet_Register_Fu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/Pet_Register_Fun"
        app:layout_constraintTop_toBottomOf="@+id/Pet_Register_Fun">


        <EditText
            android:id="@+id/dogageText"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:hint="숫자만 입력해 주세요"
            app:layout_constraintLeft_toRightOf="@+id/dogage"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/dogage"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text=" 강아지 나이 : "
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/Pet_Register_Fu"
            app:layout_constraintLeft_toRightOf="@+id/dogageText"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />



    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Pet_Register_F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/Pet_Register_Fu"
        app:layout_constraintTop_toBottomOf="@+id/Pet_Register_Fu">


        <Button
            android:id="@+id/petRegisterButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#FFEABD3E"
            android:text="MyPet 등록"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:ignore="MissingConstraints,OnClick"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="0dp" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>