<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mypet_thread"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/layout_border">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/dogimage" />

    <TextView
        android:id="@+id/dog_name"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="이름list"
        app:layout_constraintLeft_toRightOf="@id/dogimage"
        android:textSize="12sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_height="40dp"
        android:layout_width="60dp"
        android:id="@+id/dog_age"
        android:text="나이list"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/dog_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_height="40dp"
        android:layout_width="220dp"
        android:id="@+id/dog_type"
        android:text="종list"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/dog_age"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>