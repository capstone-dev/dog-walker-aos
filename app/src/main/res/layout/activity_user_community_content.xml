<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="500dp"
    android:background="#C1ECEAEA"
    tools:context=".activity.userCommunity.UserCommunityContent.UserCommunityContentActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/thread_platform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEABD3E"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/thread_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="6dp"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:text="작성자:"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@id/user_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_border"
        app:layout_constraintTop_toBottomOf="@+id/thread_platform">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C1ECEAEA">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_border">

                    <TextView
                        android:id="@+id/thread_location_form"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:text="산책 장소: "
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/thread_location_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toRightOf="@id/thread_location_form"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/thread_number_form"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:text="산책 인원: "
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/thread_location_form" />

                    <TextView
                        android:id="@+id/thread_number_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toRightOf="@id/thread_number_form"
                        app:layout_constraintTop_toBottomOf="@+id/thread_location_edit_text"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/thread_date_form"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:text="산책 날짜: "
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/thread_number_form" />

                    <TextView
                        android:id="@+id/thread_date_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toRightOf="@id/thread_date_form"
                        app:layout_constraintTop_toBottomOf="@+id/thread_number_edit_text"
                        tools:ignore="MissingConstraints" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/layout_border"
                    app:layout_constraintTop_toBottomOf="@+id/layout_1">

                    <TextView
                        android:id="@+id/thread_content1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:text="게시글 내용"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/thread_content"
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:textSize="11dp"
                        app:layout_constraintTop_toBottomOf="@+id/thread_content1"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="-547dp"
                        tools:layout_editor_absoluteY="16dp" />

                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_border"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/layout_2">

                </android.support.v7.widget.RecyclerView>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/comment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFFFFF"
                    app:layout_constraintTop_toBottomOf="@id/comment_list">

                    <TextView
                        android:id="@+id/comment_form"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="3dp"
                        android:text="Comment"
                        android:textSize="10dp"
                        app:layout_constraintLeft_toLeftOf="@id/comment_layout"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/comment"
                        android:layout_width="175dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:padding="6dp"
                        app:layout_constraintLeft_toRightOf="@id/comment_form" />

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:onClick="onClickSetCommentButton"
                        android:text="입력"
                        android:textSize="10dp"
                        app:layout_constraintRight_toRightOf="@id/comment_layout" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/comment_layout">

                    <Button
                        android:id="@+id/close_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#333333"
                        android:onClick="onclickCloseActivity"
                        android:text="닫기"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>